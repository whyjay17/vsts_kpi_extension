{
    "manifestVersion": 1,
    "id": "budget-tracking-package",
    "publisher": "YJ",
    "version": "0.0.8",
    "name": "Budget Tracking Package",
    "description": "An extension for Microsoft's Visual Studio Team Services (VSTS), which is a cloud service for collaborating on code development, to manage track budget within an organization.",
    "public": false,
    "categories": ["Plan and track"],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "contributions": [
        {
            "id": "budget-tracker",
            "type": "ms.vss-web.hub",
            "targets": [
                "ms.vss-work-web.work-hub-group"
            ],
            "properties": {
                "name": "Budget Tracking Package",
                "uri": "budget-hub.html",
                "iconAsset": "YJ.budget-tracker/img/hub-icon.png"
            }
        },
        {
            "id": "budget-bargraph-widget",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog"
            ],    
            "properties": {
                "name": "Budget Tracking Widget",
                "description": "A widget that display the budget information in bar-graphs.",
                "catalogIconUrl": "img/kpi_98x98.png",
                "previewImageUrl": "img/kpi_330x160.png",
                "uri": "budget-widget.html",
                "supportedSizes": [
                    {
                        "rowSpan": 2,
                        "columnSpan": 3
                    }
                ],
                "supportedScopes": [
                    "project_team"
                ]
            }
        }
    ],
    "scopes": [
        "vso.project"
    ],
    "files": [
        {
            "path": "css/chart.css",
            "addressable": true
        },
        {
            "path": "css/hub.css",
            "addressable": true
        },
        {
            "path": "budget-hub.html",
            "addressable": true
        },
        {
            "path": "budget-widget.html",
            "addressable": true
        },
        {
            "path": "img", "addressable": true
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "lib"
        }
    ]
}
